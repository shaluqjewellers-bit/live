  <script>
    // ---------- Premium reveal ----------
    const reveal = () => {
      document.querySelectorAll('.card').forEach((el, i) => {
        setTimeout(() => el.classList.add('reveal'), 120 + i * 110);
      });
    };
    window.addEventListener('load', reveal);

    // ---------- Fullscreen ----------
    const fsBtn = document.getElementById('fullscreenBtn');
    fsBtn?.addEventListener('click', async () => {
      try{
        if (!document.fullscreenElement) await document.documentElement.requestFullscreen();
        else await document.exitFullscreen();
      }catch(e){ /* ignore */ }
    });

    // ---------- Time row ----------
    const fmtTime = (tz) =>
      new Intl.DateTimeFormat([], { hour:'2-digit', minute:'2-digit', hour12:false, timeZone: tz }).format(new Date());

    const uaeEl = document.getElementById('uaeTime');
    const usaEl = document.getElementById('usaTime');
    const lonEl = document.getElementById('lonTime');
    const mClock = document.getElementById('marketClock');

    function tickClocks(){
      // Dubai (UAE)
      uaeEl.textContent = fmtTime('Asia/Dubai');
      // USA example: New York (you can change to Chicago/LA if you prefer)
      usaEl.textContent = fmtTime('America/New_York');
      // London
      lonEl.textContent = fmtTime('Europe/London');
      // Market clock can follow UAE for your staff
      mClock.textContent = fmtTime('Asia/Dubai');
    }
    tickClocks();
    setInterval(tickClocks, 1000 * 15);

    // ---------- Market open/closed (simple, cosmetic) ----------
    // Note: XAU/XAG trade nearly 24/5; you can fine-tune later.
    const marketDot = document.getElementById('marketDot');
    const marketStatus = document.getElementById('marketStatus');

    function isWeekdayNY(){
      const now = new Date();
      const dow = new Intl.DateTimeFormat('en-US', { weekday:'short', timeZone:'America/New_York' }).format(now);
      return !['Sat','Sun'].includes(dow);
    }

    function setMarketState(){
      const open = isWeekdayNY();
      marketDot.classList.toggle('open', open);
      marketStatus.textContent = open ? '• Open' : '• Closed';

      // Also set the badges (cosmetic; your real price feed can override)
      document.getElementById('goldStatus').textContent = open ? 'Market Open' : 'Market Closed';
      document.getElementById('silverStatus').textContent = open ? 'Market Open' : 'Market Closed';
    }
    setMarketState();
    setInterval(setMarketState, 1000 * 60);

    // ---------- Hook points for your existing price/news logic ----------
    // If you already fetch prices + headlines elsewhere, just set these:
    //
    // document.getElementById('goldPrice').textContent = '2,034.55';
    // document.getElementById('goldChange').textContent = '+0.42%';
    //
    // document.getElementById('silverPrice').textContent = '23.41';
    // document.getElementById('silverChange').textContent = '-0.18%';
    //
    // For news:
    // const list = document.getElementById('newsList');
    // list.innerHTML = `<div class="newsItem">Headline...<small>Source</small></div>`;
    // document.getElementById('newsStatus').textContent = 'Updated';
  </script>
